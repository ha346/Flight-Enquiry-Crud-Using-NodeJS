<style>
    .root {

        color: #e67e22;
        font-size: 40px;
        font-weight: bold;
        font-family: DM Sans;
        display: flex;
        justify-content: center;
        padding: 20px;
    }

    .heading {

        background: #ecf0f1;
        width: 1200px;
        height: auto;
        border-radius: 10px;

    }

    .mainheading {

        background: #8e44ad;
        height: 120vh;
        display: flex;
        justify-content: center;
  
    }
</style>

<!DOCTYPE html>
<html>

<head>
    <title>Flight Enquiry System</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@500;600&family=DM+Sans:wght@700&family=Lato:ital,wght@1,700&family=Lobster&family=Oxygen:wght@700&family=Source+Code+Pro&display=swap"
        rel="stylesheet">



    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>

        $(document).ready(function () {
            $('select').formSelect();
        });

        $(document).ready(function () {
            $('.timepicker').timepicker();
        });

    </script>
    <script src="/javascripts/project.js"></script>
</head>
</head>

<body>
    <form action="/flightnew/editdeleterecord" method="post" >
        <div class="mainheading">
            <div class="heading">
                <div class="root"><img src="/images/Spicejet.png" alt="Error loading image" width="125px">Flight Enquiry
                    System</div>


                    <div class="row">
                        <div class="col s6"> 
                            <div class="input-field">
                              <i class="material-icons prefix">airplanemode_active</i>
                              <input id="icon_fid" type="text" class="validate" name="fid" value="<%= data.flightid %>" readonly="true">
                              <label for="icon_fid">First Name</label>
                            </div>
                        </div>
                    <div class="col s6">
                        <div class="input-field">
                            <i class="material-icons prefix">business</i>
                            <input id="icon_fname"  type="text" class="validate" name="fname" value="<%= data.companyname %>">
                            <label for="icon_fname">Company Name</label>
                        </div>
                    </div>

                </div>


                <div class="row">
                    <div class="col s3">
                        <div class="input-field">
                            <i class="material-icons prefix">flight_takeoff</i>
                            <select id="sourcestate" name="sourcestate">
                                <option selected value="<%= data.sourcestateid %>"><%= data.ss %></option>
                            </select>
                            <label>Source State</label>
                        </div>
                    </div>
                    <div class="col s3">
                        <div class="input-field">
                            <i class="material-icons prefix">flight_takeoff</i>
                            <select id="sourcecity" name="sourcecity">
                                <option selected value="<%= data.sourcecityid %>"><%= data.sc %></option>
                            </select>
                            <label>Source City</label>
                        </div>
                    </div>
                    <div class="col s3">
                        <div class="input-field">
                            <i class="material-icons prefix">flight_land</i>
                            <select id="deststate" name="deststate">
                                <option selected value="<%= data.destinationstateid %>"><%= data.ds %></option>
                            </select>
                            <label>Destination State</label>
                        </div>
                    </div>
                    <div class="col s3">
                        <div class="input-field">
                            <i class="material-icons prefix">flight_land</i>
                            <select id="destcity" name="destcity">
                                <option selected value="<%= data.destinationcityid %>"><%= data.dc %></option>
                            </select>
                            <label>Destination City</label>
                        </div>
                    </div>
                </div>

                 
                <div class="row">
                    <div class="col s6">
                        <div class="input-field">
                            <select id="status" name="status">
                                <option selected><%= data.status %></option>
                                <option value="With-Stop">With-Stop</option>
                                <option value="Non-Stop">Non-Stop</option>
                            </select>
                            <label>Status</label>
                        </div>
                    </div>

                    <% var tclass=data.flightclass.split('#')
                       var ts=['','','']
                       for(i=0;i<tclass.length;i++)
                       {
                           if(tclass[i]=='Business')
                           {
                               ts[0]='checked'
                           }
                           if(tclass[i]=='Economy')
                           {
                               ts[1]='checked'
                           }
                           if(tclass[i]=='Executive')
                           {
                               ts[2]='checked'
                           }
                       }
                    
                   %>
                    <div class="col-s6"
                        style="display: flex; flex-direction: row;justify-content: space-around; align-items: center;">

                        <p>
                            <label>
                                <input type="checkbox" name="fclass" value="Business" <%= ts[0] %>>
                                <span>Business</span>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fclass" value="Economy" <%= ts[1] %>>
                                <span>Economy</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fclass" value="Executive" <%= ts[2] %>>
                                <span>Executive</span>
                            </label>
                        </p>
                    
                    </div>
                </div>
                    <div class="row">
                    <div class="col s6" >
                        <div class="input-field">
                            <i class="material-icons prefix">access_time</i>
                            <input type="text" id="icon_sourcetiming" class="timepicker" name="sourcetiming" value="<%= data.sourcetiming %>">
                            <label for="icon_sourcetiming">Source Timing</label>
                        </div>
                    </div>
                    <div class="col s6">
                        <div class="input-field">
                            <i class="material-icons prefix">access_time</i>
                            <input type="text" id="icon_destinationtiming" class="timepicker" name="destinationtiming" value="<%= data.destinationtiming %>">
                            <label for="icon_destinationtiming">Destination Timing</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12" style="display: flex; flex-direction: row; justify-content: space-around;">
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Sunday" <%= data.days.includes('Sunday')?'checked':'' %>>
                                <span>Sunday</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Monday" <%= data.days.includes('Monday')?'checked':'' %>>
                                <span>Monday</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Tuesday" <%= data.days.includes('Tuesday')?'checked':'' %>>
                                <span>Tuesday</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Wednesday" <%= data.days.includes('Wednesday')?'checked':'' %>>
                                <span>Wednesday</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Thursday" <%= data.days.includes('Thursday')?'checked':'' %>>
                                <span>Thursday</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Friday" <%= data.days.includes('Friday')?'checked':'' %>>
                                <span>Friday</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Saturday" <%= data.days.includes('Saturday')?'checked':'' %>>
                                <span>Saturday</span>
                            </label>
                        </p>
                    </div>
                </div>

                 
                <div class="row">
                    <div class="col s4" style="display: flex;justify-content: center;">
                        <button class="btn waves-effect waves-light" type="submit" name="btn" value="Edit">Edit
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                    <div class="col s4" style="display: flex;justify-content: center; font-size: 24; font-weight: bold;">
                     
                    </div>
                    <div class="col s4" style="display: flex;justify-content: center;">
                        <button class="btn waves-effect waves-light" type="submit" name="btn" value="Delete">Delete
                            <i class="material-icons right">remove</i>
                        </button>
                    </div>
                </div>


            </div>
        </div>
    </form>
</body>
<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>


</html>