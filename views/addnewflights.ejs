<style>
    .root {

        color: #e67e22;
        font-size: 40px;
        font-weight: bold;
        font-family: DM Sans;
        display: flex;
        justify-content: center;
        padding: 20px;
    }

    .heading {

        background: #ecf0f1;
        width: 90%;
        height: auto;
        border-radius: 10px;

    }

    .mainheading {

        background: #8e44ad;
        height: 150vh;
        display: flex;
        justify-content: center;
        padding: 20px;

    }
</style>

<!DOCTYPE html>
<html>

<head>
    <title>Flight Enquiry System</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@500;600&family=DM+Sans:wght@700&family=Lato:ital,wght@1,700&family=Lobster&family=Oxygen:wght@700&family=Source+Code+Pro&display=swap"
        rel="stylesheet">



    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>

        $(document).ready(function () {
            $('select').formSelect();
        });

        $(document).ready(function () {
            $('.timepicker').timepicker();
        });

    </script>
    <script src="/javascripts/project.js"></script>
</head>


<body>
    <form action="/flightnew/addnewrecords" method="post" enctype="multipart/form-data">
        <div class="mainheading">
            <div class="heading">
                <div class="root"><img src="/images/Spicejet.png" alt="Error loading image" width="125px">Flight Enquiry
                    System</div>
                <hr>


                <div class="row">
                    <div class="col s6">
                    <div class="input-field">
                        <input placeholder="Placeholder" id="first_name" type="text" class="validate">
                        <label for="first_name">First Name</label>
                    </div>
                </div>
                    <div class="col s6">
                        <div class="input-field">
                            <i class="material-icons prefix">business</i>
                            <input id="icon_fname" type="text" class="validate" name="fname">
                            <label for="icon_fname">Company Name</label>
                        </div>
                    </div>

                </div>


                <div class="row">
                    <div class="col s3">
                        <div class="input-field">
                            <i class="material-icons prefix">flight_takeoff</i>
                            <select id="sourcestate" name="sourcestate">
                                <option disabled selected>Choose your State</option>
                            </select>
                            <label>Source State</label>
                        </div>
                    </div>
                    <div class="col s3">
                        <div class="input-field">
                            <i class="material-icons prefix">flight_takeoff</i>
                            <select id="sourcecity" name="sourcecity">
                                <option disabled selected>Choose your City</option>
                            </select>
                            <label>Source City</label>
                        </div>
                    </div>
                    <div class="col s3">
                        <div class="input-field">
                            <i class="material-icons prefix">flight_land</i>
                            <select id="deststate" name="deststate">
                                <option disabled selected>Choose your State</option>
                            </select>
                            <label>Destination State</label>
                        </div>
                    </div>
                    <div class="col s3">
                        <div class="input-field">
                            <i class="material-icons prefix">flight_land</i>
                            <select id="destcity" name="destcity">
                                <option disabled selected>Choose your City</option>
                            </select>
                            <label>Destination City</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col s6">
                        <div class="input-field">
                            <select id="status" name="status">
                                <option disabled selected>Choose your option</option>
                                <option value="With-Stop">With-Stop</option>
                                <option value="Non-Stop">Non-Stop</option>
                            </select>
                            <label>Status</label>
                        </div>
                    </div>
                    <div class="col-s6"
                        style="display: flex; flex-direction: row;justify-content: space-around; align-items: center;">

                        <p>
                            <label>
                                <input type="checkbox" name="fclass" value="Business">
                                <span>Business</span>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fclass" value="Economy">
                                <span>Economy</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fclass" value="Executive">
                                <span>Executive</span>
                            </label>
                        </p>

                    </div>
                </div>
                <div class="row">
                    <div class="col s6">
                        <div class="input-field">
                            <i class="material-icons prefix">access_time</i>
                            <input type="text" id="icon_sourcetiming" class="timepicker" name="sourcetiming">
                            <label for="icon_sourcetiming">Source Timing</label>
                        </div>
                    </div>
                    <div class="col s6">
                        <div class="input-field">
                            <i class="material-icons prefix">access_time</i>
                            <input type="text" id="icon_destinationtiming" class="timepicker" name="destinationtiming">
                            <label for="icon_destinationtiming">Destination Timing</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12" style="display: flex; flex-direction: row; justify-content: space-around;">
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Sunday">
                                <span>Sunday</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Monday">
                                <span>Monday</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Tuesday">
                                <span>Tuesday</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Wednesday">
                                <span>Wednesday</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Thursday">
                                <span>Thursday</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Friday">
                                <span>Friday</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input type="checkbox" name="fdays" value="Saturday">
                                <span>Saturday</span>
                            </label>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12">
                        <div class="file-field input-field">
                            <div class="btn">
                                <span>File</span>
                                <input type="file" name="logo">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col s4" style="display: flex;justify-content: center;">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                    <div class="col s4"
                        style="display: flex;justify-content: center; font-size: 24; font-weight: bold;">
                        <%= msg %>
                    </div>
                    <div class="col s4" style="display: flex;justify-content: center;">
                        <button class="btn waves-effect waves-light" type="reset" name="action">Reset
                            <i class="material-icons right">delete</i>
                        </button>
                    </div>
                </div>


            </div>
        </div>
    </form>
</body>
<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>


</html>