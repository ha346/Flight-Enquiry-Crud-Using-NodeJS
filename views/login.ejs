<style>
     body{
        height: 95%;
        background-image: url("/images/back.jpg");
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
  } 
    .root {

        color: #e67e22;
        font-size: 40px;
        font-weight: bold;
        font-family: Ubuntu;
        display: flex;
        justify-content: center;
        padding: 20px;
    }

    .heading {

        background: #FFF;
        width: 725px;
        height: auto;
        border-radius: 10px;

    }

    .mainheading {

         
        height: 110vh;
        display: flex;
        justify-content: left;
        margin-top: 25px;
        padding: 44px;
    }
</style>

<!DOCTYPE html>
<html>

<head>
    <title>Flight Enquiry System</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@500;600&family=DM+Sans:wght@700&family=Lato:ital,wght@1,700&family=Lobster&family=Oxygen:wght@700&family=Source+Code+Pro&family=Ubuntu:wght@700&display=swap"
        rel="stylesheet">




    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>

<body>
    <form action="/admin/checkadminlogin" method="post">
        <div class="mainheading">
            <div class="heading">
                <div class="root"><img src="/images/spicejetLogo.png" alt="Error loading image" width="110px"> <span
                    style="display: flex;justify-content: center;align-items: center; font-size: 45px; font-weight: bold;color: grey;">Flight Enquiry System</span>
                </div>    
                <div
                style="display: flex;justify-content: center;align-items: center; font-size: 37; font-weight: bold;">
                <img src="/images/adminlogo.png" alt="Error loading image" width=""></div><br><br>
                  
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <i class="material-icons prefix">email</i>
                            <input id="icon_prefix" type="text" class="validate" name="userid">
                            <label for="icon_prefix">Email ID/Mobile Number</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field">
                            <i class="material-icons prefix">lock</i>
                            <input id="icon_fpass" type="password" class="validate" name="password">
                            <label for="icon_fpass">Password</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s4" style="display: flex;justify-content: center;">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Login
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                    <div class="col s8"
                        style="display: flex;justify-content: center; font-size: 24; font-weight: bold;color: red;">
                        <%= msg %>
                    </div>
                </div>

            </div>
        </div>
    </form>

</body>
</html>