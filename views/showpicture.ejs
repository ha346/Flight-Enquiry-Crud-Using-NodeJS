<style>
    .root {

        color: #e67e22;
        font-size: 40px;
        font-weight: bold;
        font-family: DM Sans;
        display: flex;
        justify-content: center;
        padding: 20px;
    }

    .heading {

        background: #ecf0f1;
        width: 600px;
        height: auto;
        border-radius: 10px;

    }

    .mainheading {

        background: #8e44ad;
        height: 120vh;
        display: flex;
        justify-content: center;
   
    }
</style>

<!DOCTYPE html>
<html>

<head>
    <title>Flight Enquiry System</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@500;600&family=DM+Sans:wght@700&family=Lato:ital,wght@1,700&family=Lobster&family=Oxygen:wght@700&family=Source+Code+Pro&display=swap"
        rel="stylesheet">



    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>


<body>
    <form action="/flightnew/editpicture" method="post" enctype="multipart/form-data">
        <div class="mainheading">
            <div class="heading">
                <div class="root"><img src="/images/Spicejet.png" alt="Error loading image" width="125px">Edit Company
                    Logo</div>
                <div class="row">
                    <div class="col s12" style="display: flex; justify-content: center;">
                        <h3>
                            <%= companyname %>
                        </h3>
                        <input type="hidden" value="<%= flightid %>" name="flightid">
                        <input type="hidden" value="<%= logo %>" name="oldlogo">
                    </div>
                </div>
                <div class="row">
                    <div class="col s12" style="display: flex; justify-content: center;">
                        <img src="/images/<%= logo %>" alt="Error Loading Image" width="300">
                    </div>
                </div>

                <div class="row">
                    <div class="col s12">
                        <div class="file-field input-field">
                            <div class="btn">
                                <span>File</span>
                                <input type="file" name="logo" required>
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12" style="display: flex;justify-content: center;">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Edit Company Logo
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</body>

</html>